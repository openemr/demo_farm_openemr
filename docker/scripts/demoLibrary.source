    mysqladmin -f -h ${MYSQLIP} -u root -p${2} drop ${1}_cwordpress
    mysqladmin -f -h ${MYSQLIP} -u root -p${2} drop ${1}_d
    mysqladmin -f -h ${MYSQLIP} -u root -p${2} drop ${1}_dwordpress
