# This is the wrapper to start the demo, so only need to modify the specifics in 1 place
# rather than 2. This sets up the pieces for running the startDemo() function
# 1st (and only) parameter is the demo name (one, two, three, etc.)
startDemoWrapper() {
    if [ "$1" == "seven" ]; then
        startDemo "$1" "mysql-openemr" "/etc/php/7.2/apache2" "ubuntu" "18-04" "18.04" "/var/www/html" "4"
    elif [ "$1" == "eight" ]; then
        startDemo "$1" "mysql-openemr" "/etc/php7" "alpine" "3-12" "3.12" "/var/www/localhost/htdocs" "2"
    elif [ "$1" == "nine" ]; then
        startDemo "$1" "mysql-openemr" "/etc/php/7.4/apache2" "ubuntu" "20-04-16" "20.04-16" "/var/www/html" "4"
    elif [ "$1" == "ten" ]; then
        startDemo "$1" "mysql-openemr" "/etc/php81" "alpine" "3-16" "3.16" "/var/www/localhost/htdocs" "4"
    elif [ "$1" == "eleven" ]; then
        startDemo "$1" "mysql-openemr" "/etc/php8" "alpine" "3-15-8" "3.15-8" "/var/www/localhost/htdocs" "4"
    elif [ "$1" == "four" ]; then
        startDemo "$1" "mysql-openemr" "/etc/php8" "alpine" "3-15-8" "3.15-8" "/var/www/localhost/htdocs" "6"
    elif [ "$1" == "five" ]; then
        startDemo "$1" "mysql-openemr" "/etc/php8" "alpine" "3-15-8" "3.15-8" "/var/www/localhost/htdocs" "3"
    elif [ "$1" == "six" ]; then
        startDemo "$1" "mysql-openemr" "/etc/php7" "alpine" "3-10" "3.10" "/var/www/localhost/htdocs" "4"
    elif [ "$1" == "three" ]; then
        startDemo "$1" "mysql-openemr" "/etc/php/8.1/apache2" "ubuntu" "22-04-16" "22.04-16" "/var/www/html" "4"
    elif [ "$1" == "two" ]; then
        startDemo "$1" "mysql-openemr" "/etc/php/7.4/apache2" "ubuntu" "20-04" "20.04" "/var/www/html" "2"
    elif [ "$1" == "one" ]; then
        startDemo "$1" "mysql-openemr" "/etc/php7" "alpine" "3-15" "3.15" "/var/www/localhost/htdocs" "6"
    elif [ "$1" == "edu" ]; then
        startDemo "$1" "mysql-openemr" "/etc/php8" "alpine" "3-15-8" "3.15-8" "/var/www/localhost/htdocs" "2"
    else
        startDemo "$1" "mysql-openemr" "/etc/php/7.0/apache2" "ubuntu" "16-04" "16.04" "/var/www/html" "1"
    fi
}

# Will stop and clear an openemr demo
# 1st parameter is the demo name (one, two, three, etc.)
# 2nd parameter is the mysql root password
stopDemo () {
    local MYSQLIP=`docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' mysql-openemr`

    # Stop the docker
    echo "Stop ${1}-openemr docker"
    docker stop ${1}-openemr
    docker rm ${1}-openemr

    # Remove the database stuff
    echo "Clear ${1}-openemr databases and users"
    mysqladmin -f -h ${MYSQLIP} -u root -p${2} drop ${1}
    mysqladmin -f -h ${MYSQLIP} -u root -p${2} drop ${1}wordpress
    mysqladmin -f -h ${MYSQLIP} -u root -p${2} drop ${1}_a
    mysqladmin -f -h ${MYSQLIP} -u root -p${2} drop ${1}_awordpress
    mysqladmin -f -h ${MYSQLIP} -u root -p${2} drop ${1}_b
    mysqladmin -f -h ${MYSQLIP} -u root -p${2} drop ${1}_bwordpress
